<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded"
    android:layout_marginHorizontal="50dp"
    android:layout_marginVertical="20dp">

    <ImageView
        android:id="@+id/rowImage"
        android:layout_width="match_parent"
        android:paddingVertical="10dp"
        android:paddingHorizontal="30dp"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        android:background="@drawable/bg_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/rowImage"
        app:layout_constraintStart_toStartOf="@+id/rowImage"
        app:layout_constraintTop_toBottomOf="@+id/rowImage">

        <TextView
            android:id="@+id/rowProductTitle"
            android:text="Album Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_margin="13dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/rowProductDescription"
            android:text="Album Description"
            android:maxLines="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_margin="9dp"
            android:textAlignment="center"
            android:layout_weight="2"
            android:textColor="@color/black"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>